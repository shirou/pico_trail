{
	"private": true,
	"scripts": {
		"format": "remark docs/ --frail --output -r config/remark-format.json AGENTS.md CLAUDE.md",
		"lint": "remark --frail docs/ -r config/remark-lint.json AGENTS.md CLAUDE.md",
		"lint:external": "remark --frail docs/ -r config/remark-lint-external.json AGENTS.md CLAUDE.md",
		"format:ts": "biome format --write",
		"lint:ts": "biome lint",
		"test:ts": "bun test --coverage"
	},
	"prettier": {
		"endOfLine": "lf",
		"printWidth": 120,
		"tabWidth": 2
	},
	"dependencies": {
		"prettier": "3.6.2",
		"remark-cli": "12.0.1",
		"remark-frontmatter": "5.0.0",
		"remark-gfm": "4.0.1",
		"remark-lint-no-dead-urls": "2.0.1",
		"remark-preset-lint-markdown-style-guide": "6.0.1",
		"remark-preset-lint-recommended": "7.0.1",
		"remark-preset-prettier": "2.0.2",
		"remark-validate-links": "13.1.0",
		"unified-prettier": "2.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bun": "1.2.21",
		"@types/node": "24.3.1",
		"typescript": "5.9.2"
	}
}
